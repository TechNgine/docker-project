pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'dennis', url: 'https://github.com/TechNgine/docker-project.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Navigate into the tindog directory and build the Docker image
                    dir('tindog') {
                        sh 'docker build -t tindog-nginx .' // Now, build from inside the tindog folder
                    }
                    sh 'docker images'  // List all available Docker images
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                script {
                    // Stop and remove any existing container if running
                    sh 'docker stop tindog-container || true'
                    sh 'docker rm tindog-container || true'

                    // Run the new container
                    sh 'docker run -d --name tindog-container -p 80:80 tindog-nginx'
                    sh 'docker ps -a'  // List all running and stopped containers
                }
            }
        }
    }

    post {
        success {
            echo 'Deployment Successful! Access your TinDog project at http://localhost'
        }
        failure {
            echo 'Deployment Failed!'
        }
    }
}
